{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Chorus Meta Block",
    "type": "object",
    "properties": {
        "op": {
            "type": "string",
            "enum": [
                "create_file",
                "append_section",
                "replace_section",
                "delete_section",
                "rename_heading",
                "update_schema"
            ]
        },
        "target": {
            "type": "string",
            "description": "File path relative to repository root."
        },
        "section": {
            "type": "string",
            "description": "Heading to operate on when relevant."
        },
        "content": {
            "type": "string",
            "description": "Content to insert or replace."
        },
        "notes": {
            "type": "string",
            "description": "Optional comments for human reviewers."
        }
    },
    "required": [ "op", "target" ],
    "additionalProperties": false
}
